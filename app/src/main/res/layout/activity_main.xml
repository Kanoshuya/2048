<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e83d4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:text="你在过着怎样的人生？"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
    <ImageButton
        android:id="@+id/back"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:background="@drawable/ic_back"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <TextView
        android:id="@+id/stepTitle"
        android:textAlignment="center"
        android:layout_below="@+id/title"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@id/box"
        android:text="步数"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/step"
        android:textAlignment="center"
        android:layout_below="@+id/stepTitle"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@id/box"
        android:text="0"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal" />
    <RelativeLayout
        android:id="@+id/box"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/x0_0"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/x0_1"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/x0_2"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/x0_3"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row2"
            android:layout_below="@+id/row1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/x1_0"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/x1_1"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/x1_2"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/x1_3"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row3"
            android:layout_below="@+id/row2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/x2_0"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/x2_1"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/x2_2"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/x2_3"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row4"
            android:layout_below="@+id/row3"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/x3_0"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/x3_1"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/x3_2"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/x3_3"
                android:clickable="true"
                android:background="@drawable/ic_null"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/success"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_success"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <ImageView
            android:id="@+id/gameover"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_gameover"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <Button
            android:id="@+id/restart"
            android:layout_below="@id/gameover"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_restart"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="40dp"/>
    </RelativeLayout>

</RelativeLayout>